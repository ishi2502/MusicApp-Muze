    <!-- navbar end -->
    <h1 class="login_head">LOGIN</h1>
    <div class="login-container">
        <img id="login-img" src="/images/full_logo.png" alt="MUZE">
        <form action="/auth/login" method="POST">
            <div class="login-form-group">
                <label for="username">Username:</label>
                <input class="login-input" name="username" type="text" id="username" placeholder="username" required>
                <br><br>
                <label for="password">Password:</label>
                <input class="login-input" name="password" type="password" id="password" placeholder="password" required>
                <br><br>
                <label id="invalidup"><%= message %></label>
                <br>
                <input id="login-button" type="submit" value="LOGIN">
            </div>
        </form>
        <div id="noacc">
            Don't have an Account?
            <a href="/signup">SIGN UP</a>
        </div>
    </div>
