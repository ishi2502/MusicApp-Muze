    <section id="signup_main">

        <div id="signup_container">
            <div id="sigup_card">
                <h1 style="text-align:center">SIGN UP</h1>
                <form id="signup_form" action="/auth/signup" method="POST">
                    <img src="https://img.icons8.com/ios-glyphs/30/000000/user--v1.png" />
                    <input type="text" name="name" id="name" placeholder="User Name" required>
                    <br>
                    <br>
                    <img src="https://img.icons8.com/ios-glyphs/30/000000/new-post.png" />
                    <input type="email" name="mail" id="mail" placeholder="Your Email" required>
                    <br>
                    <br>
                    <img src="https://img.icons8.com/ios-glyphs/30/000000/lock--v1.png" />
                    <input type="password" name="pswrd" id="pswrd" placeholder="Your Password" required>
                    <br><br>
                    <img src="https://img.icons8.com/ios-glyphs/30/000000/key.png" />
                    <input type="password" name="reppassword" id="reppswrd" placeholder="Repeat Your Password" required>
                    <br>
                    <h5 style="color:red">
                        <%=message%>
                    </h5>
                    <button type="submit" class="register_btn">Register</button>
                </form>
                <h6 id="sign_login_connect">
                    Have already an Account?
                    <a href="/login">Login Here</a>
                </h6>
            </div>
            <div id="signup_image_card">
                <img src="/images/signup.png"
                    alt="Sample image">
            </div>
        </div>
    </section>
